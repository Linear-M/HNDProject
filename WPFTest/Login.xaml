<Window x:Class="WPFTest.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Login" Height="160" Width="840" Background="#FE339EC6">
    <Grid>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Center" Height="42" Margin="25,10,434,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="375" FontFamily="Arial" FontSize="18" Background="#FF6ABBFF" BorderThickness="2" BorderBrush="{x:Null}" TextAlignment="Center"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="405,10,0,0" VerticalAlignment="Top" Width="385" Background="#FF3E9DDE" Height="42" Click="btnLogin_Click"/>
        <Button x:Name="btnLogout" Content="Logout" HorizontalAlignment="Left" Margin="405,68,0,0" VerticalAlignment="Top" Width="385" Background="#FF3E9DDE" Height="42" Opacity="0.5" Click="btnLogout_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="25,68,0,0" VerticalAlignment="Top" Width="365" Height="42" FontFamily="Arial" FontSize="18" Background="#FF6ABBFF" BorderThickness="2" BorderBrush="{x:Null}"/>

    </Grid>
</Window>
